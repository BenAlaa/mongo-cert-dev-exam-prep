// imdb rating >= 7; genres not have Crime, Horror; rated PG or G; languages English and Japanese
var pipeline = [
    {
        $match: {
            'imdb.rating': {$gte: 7},
            genres: {$nin: ['Crime', 'Horror']},
            rated: {$in: ['PG', 'G']},
            languages: {$all: ['English', 'Japanese']}
        }
    }
]